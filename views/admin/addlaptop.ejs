<%-include('../partials/admin/admin.head.ejs')-%>
<body>

    <!-- Offcanval Overlay -->
    <div class="offcanvas-overlay"></div>
    <!-- Offcanval Overlay -->

    <!-- Wrapper -->
    <div class="wrapper">
        <!-- Header -->
        <%-include('../partials/admin/admin.header.ejs')-%>

        <!-- End Header -->

        <!-- Main Wrapper -->
        <div class="main-wrapper">
            <!-- Sidebar -->
            <%-include('../partials/admin/admin.sidebar.ejs')-%>
            <!-- End Sidebar -->

            <!-- Main Content -->
            <div class="main-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Base Horizontal Form With Icons -->
                            <div class="form-element py-30 multiple-column">
                                <h4 class="font-20 mb-20">Add Laptop</h4>

                                <!-- Form -->
                                <form method="POST">

                                    <div class="row">
                                        <div class="col-lg-2"></div>
                                        <div class="col-lg-8">
                                            <!-- Form Group -->
                                            <div class="form-group">
                                                <label class="font-14 bold mb-2">Brand</label>
                                                <input type="text" class="theme-input-style" placeholder="Type Laptop Brand" name="brand" id="brand" required>
                                            </div>
                                            <!-- End Form Group -->
                                            
                                            <!-- Form Group -->
                                            <div class="form-group">
                                                <label class="font-14 bold mb-2">Model</label>
                                                <input type="text" class="theme-input-style" placeholder="Type Laptop Model" name="model" id="model" required>
                                            </div>
                                            <!-- End Form Group -->
                                            <div class="form-group">
                                                <label class="font-14 bold mb-2">Category</label>
                                                <input type="text" class="theme-input-style" placeholder="Type Laptop Category" name="category" id="category" required>
                                            </div>
                                            
                                            <!-- Form Group -->
                                            <div class="form-group">
                                                <label class="font-14 bold mb-2">Description</label>
                                                <!-- <input type="text" class="theme-input-style" placeholder="Type Laptop Description"> -->
                                                 <textarea name="description" id="description" class="theme-input-style"></textarea>
                                            </div>
                                            <!-- End Form Group -->
                                            <div class="form-row">
                                                <div class="col-12 text-right">
                                                    <button type="submit" class="btn btn-block w-100" id="submit">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-2"></div>

                                        
                                    </div>

                                    
                                    <!-- Form Row -->
                                    <!-- End Form Row -->
                                </form>
                                <!-- End Form -->
                            </div>
                            <!-- End Horizontal Form With Icons -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Main Content -->
        </div>
        <!-- End Main Wrapper -->

        <!-- Footer -->
        <%-include('../partials/admin/admin.footer.ejs')-%>

        <!-- End Footer -->
    </div>
    <!-- End wrapper -->

    <%-include('../partials/admin/admin.script.ejs')-%>
    <script>
        document.getElementById('submit').addEventListener('submit',(e)=>{
            e.preventDefault()
            const brand=document.getElementById('brand').value
            const model=document.getElementById('model').value
            const category=document.getElementById('category').value
            const description=document.getElementById('description').value
            console.log(brand,model,category,description)
            const laptopDetails={
                brand:brand,
                model:model,
                category:category,
                description:description
            }
            fetch('/addlaptop',{
                method:'POST',
                headers:{

                    'Content-Type':"application/json"
                },
                body:JSON.stringify(laptopDetails)
            }).then((Response)=>{
                Response.json()
            }).then(results=>{
                Swal.fire({
              title: "Good job!",
              text: "Laptop Successfully added",
              icon: "success",
            });
            }).catch(error=>{
                swal.fire({
                icon:"error",
                title:"Oooopss...",
                text:"Something went wrong adding laptop"
            })
            })

        })
    </script>
</body>

</html>